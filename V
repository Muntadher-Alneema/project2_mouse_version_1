//To draw and do some stuff

//default black background
void setup(){
  size(500,500);
  background(0);
}

//ink
void draw(){
  //red
  stroke(255,0,0);
  line(mouseX,mouseY,pmouseX,pmouseY);
  
  //blue but it looks purple for who knows what reason
  if(keyPressed==true){
    stroke(0,0,255);
    line(mouseX,mouseY,pmouseX,pmouseY);
    }}

//click mouse for pink background.."erase"       
void mousePressed(){
  background(209,184,214);

  //hold key and mouse click for black background
  if(keyPressed==true){
    background(0);
  }
}


